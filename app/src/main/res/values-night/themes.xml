<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">#17171C</item>
    </style>

    <style name="text_style1">
        <item name="fontFamily">@font/works_sans_light</item>
        <item name="android:textColor">#747477</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="text_style2">
        <item name="fontFamily">@font/works_sans_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">90sp</item>
    </style>

    <style name="btn_light">
        <item name="android:background">@drawable/border</item>
        <item name="backgroundTint">@color/dark_button</item>
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="btn_dark">
        <item name="android:background">@drawable/border</item>
        <item name="backgroundTint">@color/darkk_button</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>
</resources>